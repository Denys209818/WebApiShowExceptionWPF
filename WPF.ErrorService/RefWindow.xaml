<Window x:Class="WPF.ErrorService.RefWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.ErrorService"
        mc:Ignorable="d"
        Title="Посилання" Height="120" Width="400" Loaded="Window_Loaded">
    
        <Grid>
        <StackPanel>
            <Label Content="Введіть посилання" FontSize="20" HorizontalAlignment="Center" Foreground="Red" FontWeight="Bold"/>
            <TextBox Width="300" FontSize="20" Text="{Binding link, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
        </StackPanel>
    </Grid>
</Window>
